extends ../layout

block content
  a(href="/api/courses/add",class="btn btn-success") Create New
  table.table
    thead
        tr
            th Course Name
            th Course Id
            th Course Duration(Hrs)
            th Course Fee(USD)
    tbody
        each item in courses
            tr
                td=item.course_name
                td=item.course_id
                td=item.course_duration
                td=item.course_fee
                td
                    a(href="/api/courses/edit/"+item._id,class="btn btn-warning mx-2") Edit
                    a(href="/api/courses/delete/"+item._id,class="btn btn-danger") Delete